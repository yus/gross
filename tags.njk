---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: "/tags/{{ tag | slug }}/"
layout: base.njk
title: "Tag: {{ tag }}"
---

<div class="max-w-4xl mx-auto">
  <a href="/" class="text-blue-500 hover:underline mb-8 inline-block">‚Üê Back home</a>
  
  <h1 class="text-4xl font-bold mb-8 font-mono">Tag: {{ tag }}</h1>
  
  <h2 class="text-2xl font-bold mb-4">All Posts:</h2>
  <ul class="space-y-4">
    {% for post in collections.posts %}
      <li class="bg-white p-4 rounded shadow">
        <a href="{{ post.url }}" class="text-purple-600 hover:text-pink-500 font-bold">
          {{ post.data.title }}
        </a>
        <div class="text-gray-600 text-sm mt-1">
          {{ post.date | date: "%B %d, %Y" }}
        </div>
      </li>
    {% endfor %}
  </ul>
</div>
