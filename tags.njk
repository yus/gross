---
pagination:
  data: collections.tagList
  size: 1
  alias: tag
permalink: /tags/{{ tag | slug }}/
layout: base.njk
title: "Tag: {{ tag }}"
---

<h2 class="text-3xl font-bold mb-8 font-mono">Posts tagged "{{ tag }}"</h2>

<div class="space-y-6">
  {% set posts = collections.postsByTag[tag] %}
  {% for post in posts %}
  <article class="bg-white p-6 rounded-xl shadow hover:shadow-lg transition-shadow">
    <h3 class="text-2xl font-bold mb-2">
      <a href="{{ post.url }}" class="text-gross-purple hover:underline">{{ post.data.title }}</a>
    </h3>
    <div class="text-gray-600 mb-4">{{ post.date | date: "%B %d, %Y" }}</div>
    <div class="prose prose-lg max-w-none">{{ post.templateContent | safe }}</div>
    <div class="mt-4">
      {% for postTag in post.data.tags %}
      <a href="/tags/{{ postTag | slug }}/" 
         class="tag-pill bg-gray-100 border-gray-300 mr-2">
        {{ postTag }}
      </a>
      {% endfor %}
    </div>
  </article>
  {% endfor %}
</div>
